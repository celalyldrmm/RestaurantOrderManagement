        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5195/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");                                            
                    }, 1000);

                }).catch((err) => { console.log(err) });
                connection.on("ReceiveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });
                connection.on("ReceiveProductCount", (value2) => {
                    $("#productcount").text(value2);
                });
                connection.on("ReceiveActiveCategoryCount", (value3) => {
                    $("#activecategoryCount").text(value3);
                });
                connection.on("ReceivePassiveCategoryCount", (value4) => {
                    $("#passivecategoryCount").text(value4);
                });
                connection.on("ReceiveTProductCountByCategoryHamburger", (value5) => {
                    $("#productcountbycategoryhamburger").text(value5);
                });
                connection.on("ReceiveTProductCountByCategoryDrink", (value6) => {
                    $("#productcountbycategorydrink").text(value6);
                });
                connection.on("ReceiveTProductPriceAvg", (value7) => {
                    $("#productpriceavg").text(value7);
                });
                connection.on("ReceiveTProductNameByMaxPrice", (value8) => {
                    $("#productnamebymaxprice").text(value8);
                });
                connection.on("ReceiveTProductNameByMinPrice", (value9) => {
                    $("#productnamebyminprice").text(value9);
                });
                connection.on("ReceiveTProductPriceByHamburger", (value10) => {
                    $("#productpricebyhamburger").text(value10);
                });
                connection.on("ReceiveTTotalOrderCount", (value11) => {
                    $("#totalordercount").text(value11);
                });
                connection.on("ReceiveTActiveOrderCount", (value12) => {
                    $("#activeordercount").text(value12);
                });
                connection.on("ReceiveTLastOrderPrice", (value13) => {
                    $("#lastorderprice").text(value13);
                });
                connection.on("ReceiveTTotalMoneyCaseAmount", (value14) => {
                    $("#totalmoneycaseamount").text(value14);
                });
                connection.on("ReceiveTTodayTotalPrice", (value15) => {
                    $("#todaytotalprice").text(value15);
                });
                connection.on("ReceiveTMenuTableCount", (value16) => {
                    $("#menutablecount").text(value16);
                });
                
            });
        </script>
